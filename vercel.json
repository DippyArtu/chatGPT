{
    "version": 2,
    "builds": [
      {
        "src": "client/app.js",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/server/server.js"
      },
      {
        "source": "/(.*)",
        "destination": "/client/build/app.js"
      }
    ]
  }
  